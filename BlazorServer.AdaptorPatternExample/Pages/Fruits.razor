@page "/fruits"
@using BlazorServer.AdaptorPatternExample.Domain.Models;

<MudDataGrid @attributes='Splats.DataGrid("fruits")' T="Fruit" Items="@FruitList" SortMode="SortMode.Multiple" Filterable="true" QuickFilter="@QuickFilter" Hideable="true">
    <ToolBarContent>
        <MudText @attributes='Splats.PageHeader("fruits")'>Fruits</MudText>
        <MudSpacer />
        <MudTextField @attributes='Splats.SearchField()' @bind-Value="SearchString" Class="mt-0 mr-2"></MudTextField>
        <MudButton @attributes="Splats.NewButton()" class="ml-2" OnClick="LookUpFruit">Look Up Fruit</MudButton>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="Customer" Sortable="true" Filterable="false" InitialDirection="SortDirection.Ascending" />
        <PropertyColumn Property="x => x.Genus" Title="Genus" Sortable="true" Filterable="false" />
        <PropertyColumn Property="x => x.Order" Title="Order" Sortable="true" Filterable="false" />
        <PropertyColumn Property="x => x.Family" Title="Family" Sortable="true" Filterable="false" />
        <PropertyColumn Property="x => x.Calories" Title="Calories" Sortable="true" Filterable="false" />
        <PropertyColumn Property="x => x.Carbohydrates" Title="Carbohydrates" Sortable="true" Filterable="false" />
        <PropertyColumn Property="x => x.Sugar" Title="Sugar" Sortable="true" Filterable="false" />
        <PropertyColumn Property="x => x.Protein" Title="Protein" Sortable="true" Filterable="false" />
        <PropertyColumn Property="x => x.Fat" Title="Fat" Sortable="true" Filterable="false" />
        <PropertyColumn Property="x => x.RquestedDate" Title="RquestedDate" Sortable="true" Filterable="false" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="Fruit" />
    </PagerContent>
</MudDataGrid>
